{
  "name": "zephyr-italy-slot-finder-bot",
  "version": "1.1.0",
  "description": "Italy slots finder",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "build": "cross-env NODE_ENV=production tsc",
    "dev:app": "cross-env NODE_ENV=development nodemon --watch src --exec ts-node src/index.ts",
    "dev:mock": "cross-env NODE_ENV=development nodemon --watch mocks --watch src/server --ext ts,js --exec ts-node dev-server.ts",
    "dev": "concurrently -k -n APP,MOCK -c green,cyan \"npm run dev:app\" \"npm run dev:mock\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "semantic-release": "semantic-release",
    "docker:publish": "docker buildx build --platform linux/arm64 -t registry.zephyr-home.org/zephyr-notifier:%npm_package_version% -t registry.zephyr-home.org/zephyr-notifier:latest --push .",
    "prepare": "husky install"
  },
  "author": "skarmind",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "cron": "^4.3.2",
    "cross-env": "^10.0.0",
    "dotenv": "^16.6.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "express": "^5.1.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}
